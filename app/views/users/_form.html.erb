<%= form_with(model: user, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <!-- Adicione um campo para upload de arquivo PDF -->
  <div class="field">
    <%= form.label :pdf_document, 'Documento PDF' %>
    <%= form.file_field :pdf_document %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>